<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="50dp" android:gravity="center_vertical">

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="02.07.2016"
              android:id="@+id/date" android:textAlignment="center" android:layout_marginRight="20dp"
              android:layout_marginLeft="10dp" android:layout_weight="0.33"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Boxing gym"
              android:id="@+id/place" android:textAlignment="center" android:layout_marginRight="20dp"
              android:layout_weight=".34"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Boxing" android:id="@+id/sport"
              android:textAlignment="center" android:layout_marginRight="10dp" android:layout_weight=".33"/>
</LinearLayout>