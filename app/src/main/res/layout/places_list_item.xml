<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center_vertical">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/placeImage"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="10dp"
            android:layout_weight=".40">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boxing gym"
                android:id="@+id/placeTitle"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="The best boxing gym in Sofia for 2016!"
                android:lines="2"
                android:id="@+id/placeDescription"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/addVisit" android:background="@drawable/round_button"
            android:src="@drawable/plus" android:scaleType="fitCenter" android:padding="7dip"
            android:layout_marginRight="5dp"/>
</LinearLayout>